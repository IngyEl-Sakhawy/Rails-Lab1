<nav>
  <ul>
    <li><%= link_to "Home", root_path %></li>
    <% if user_signed_in? %>
      <li>
    <%= form_tag destroy_user_session_path, method: :delete do %>
      <%= submit_tag "Logout", class: "link-btn" %>
    <% end %>
  </li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
    <% end %>
  </ul>
</nav>

